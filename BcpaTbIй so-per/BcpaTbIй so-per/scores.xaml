        <Button x:Name="qqq" Content="Принять" HorizontalAlignment="Left" Margin="464,141,0,0" VerticalAlignment="Top" Width="160" Height="60" Click="Button_Click" BorderBrush="{x:Null}" FontFamily="Capture it(RUS BY LYAJKA)" Foreground="White" FontSize="22" MouseEnter="Qqq_MouseEnter" MouseLeave="Qqq_MouseLeave" Cursor="Hand">
            <Button.Background>
