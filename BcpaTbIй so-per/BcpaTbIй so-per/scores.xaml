        <TextBox x:Name="win_name" HorizontalAlignment="Left" Height="37" Margin="97,155,0,0" TextWrapping="Wrap" Text="Впишите Имя" VerticalAlignment="Top" Width="217" BorderBrush="{x:Null}" FontSize="25" SelectionBrush="White" Foreground="White" FontFamily="Capture it(RUS BY LYAJKA)" MouseEnter="Win_name_MouseEnter" Cursor="Hand" TextChanged="Win_name_TextChanged" TextAlignment="Center" Background="{x:Null}"/>
