            </Button.Background>
        </Button>
        <Button x:Name="игеук" Content="Button" HorizontalAlignment="Left" Height="60" Margin="84,141,0,0" VerticalAlignment="Top" Width="240" BorderBrush="{x:Null}" Foreground="{x:Null}">
