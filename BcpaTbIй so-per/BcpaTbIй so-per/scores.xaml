        <Label Content="Менятель результатов" HorizontalAlignment="Left" Height="71" Margin="97,39,0,0" VerticalAlignment="Top" Width="538" FontFamily="Capture it(RUS BY LYAJKA)" FontSize="40" RenderTransformOrigin="0.5,0.5" Background="{x:Null}" Foreground="Black">
